profiles {
  standard {
    process {
      executor = 'local'
    }
  }

  docker {
    docker.enabled = true
    process.container = 'glenjasper/ampliconflow:dev'
    params.scripts_path = '/opt/ampliconflow/scripts'
  }

  singularity {
    singularity.enabled = true
    singularity.autoMounts = true
    process.container = 'docker://glenjasper/ampliconflow:dev'
    params.scripts_path = '/opt/ampliconflow/scripts'
  }
}
